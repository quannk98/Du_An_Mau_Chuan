<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemls"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/custome_listview"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Mã Loại Sách:"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/itemls_maloaisach"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Tên Loại Sách:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/itemls_tenloaisach"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/itemls_suals"
        android:src="@drawable/baseline_edit_24"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="310dp"
        android:layout_width="40dp"
        android:layout_height="70dp"/>
    <ImageButton
        android:id="@+id/itemls_xoals"
        android:src="@drawable/baseline_delete_forever_24"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="360dp"
        android:layout_width="40dp"
        android:layout_height="70dp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemphieumuon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/custome_listview">

    <RelativeLayout
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:text="Mã Phiếu Mượn:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemphieumuon_maphieumuon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/a"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/t2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1">

        <TextView
            android:id="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành Viên:"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemphieumuon_tenthanhvien"
            android:layout_toEndOf="@+id/a1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/t3"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2">

        <TextView
            android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tên Sách:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemphieumuon_tensach"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/a2"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/t4"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t3">

        <TextView
            android:id="@+id/a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tiền Thuê:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemphieumuon_tienthue"
            android:layout_toEndOf="@+id/a4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a5"
            android:layout_toEndOf="@+id/itemphieumuon_tienthue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Thuê:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemphieumuon_ngaythue"
            android:layout_toEndOf="@+id/a5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t4">

        <TextView
            android:id="@+id/a6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tên Thủ Thư:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemphieumuon_tentt"
            android:layout_toEndOf="@+id/a6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
        <TextView
            android:id="@+id/itemphieumuon_trangthai"
            android:layout_below="@+id/t5"
            android:layout_width="match_parent"
            android:background="@android:color/holo_blue_light"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:text="abca"
            android:textSize="20dp"
            android:textStyle="bold" />



    <ImageButton
        android:id="@+id/itemphieumuon_sua"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/itemphieumuon_xoa"
        android:src="@drawable/baseline_edit_24" />

    <ImageButton
        android:id="@+id/itemphieumuon_xoa"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:src="@drawable/baseline_delete_forever_24" />


</RelativeLayout>
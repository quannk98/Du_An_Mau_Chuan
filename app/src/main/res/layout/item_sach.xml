<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemsach"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/custome_listview">

    <RelativeLayout
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mã Sách:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemsach_masach"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/a1"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1">

        <TextView
            android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tên Sách:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemsach_tensach"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/a2"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2">

        <TextView
            android:id="@+id/a3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Giá Thuê:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemsach_giasach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/a3"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t3">

        <TextView
            android:id="@+id/a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Loại Sách:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemsach_loaisach"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/a4"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/itemsach_suas"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/t2"
        android:src="@drawable/baseline_edit_24" />

    <ImageButton
        android:id="@+id/itemsach_xoas"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/itemsach_suas"
        android:src="@drawable/baseline_delete_forever_24" />
</RelativeLayout>
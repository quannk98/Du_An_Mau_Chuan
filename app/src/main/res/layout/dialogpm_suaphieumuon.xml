<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="center_horizontal"
        android:text="Sửa Phiếu Mượn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Tên Thành Viên"
        />
    <Spinner
        android:id="@+id/dialogpm_suatentv"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Tên Sách"/>
    <Spinner
        android:id="@+id/dialogpm_suatensach"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Giá Thuê Sách"/>
    <EditText
        android:id="@+id/dialogpm_suagiathue"
        android:layout_width="350dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:background="@drawable/custome_listview"
        android:layout_gravity="center"
        android:layout_height="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Ngày Thuê Sách"/>
    <EditText
        android:id="@+id/dialogpm_suangaythue"
        android:layout_width="350dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custome_listview"
        android:layout_gravity="center"
        android:layout_height="40dp"
        />
    <CheckBox
        android:id="@+id/dialogpm_suatrangthai"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Đã Trả Sách"
        android:textSize="20dp"
        android:layout_marginTop="-38dp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/dialogpm_btnsuapm"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:text="Sửa" />

    <Button
        android:id="@+id/dialogpm_btnthoatsuapm"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="230dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="THoát" />
</LinearLayout>